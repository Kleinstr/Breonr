while True:
         number_first =input ('Please enter a number: ')
         while (number_first ==''):
                  number_first =input ('Please enter a number: ')
         number_first =int(number_first)
         number_second = input ("Please enter another number:")
         while (number_second ==' '):
                  number_second = input ("Please enter another number:")
         number_second = int (number_second)
         choice_number = int (input ("Please enter a choice number:/n 1 for +,2 for -,3 for * ,4 for /"))
         choice =choice_number
         result = 0
         def addition():
                  global result
                  result= number_first + number_second
         def subtraction():
                  global result
                  result= number_first -number_second
         def multiplication():
                  global result
                  result= number_first *number_second
         def division():
                  global result
                  result= number_first / number_second
         if choice ==1:
                  addition()
         elif choice ==2:
                  subtraction()
         elif choice ==3:
                  multiplication()
         else :
                  division()
         print(result)

